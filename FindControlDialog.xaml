<Window x:Class="window_tools.FindControlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="查找控件" Height="600" Width="800" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize" MinHeight="500" MinWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="查找控件" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- 控件名称 -->
        <Label Grid.Row="1" Grid.Column="0" Content="控件名称:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtControlName" Margin="5"/>

        <!-- 自动化ID -->
        <Label Grid.Row="2" Grid.Column="0" Content="自动化ID:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtAutomationId" Margin="5"/>

        <!-- 控件类型 -->
        <Label Grid.Row="3" Grid.Column="0" Content="控件类型:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cboControlType" Margin="5" IsEditable="True"/>

        <!-- 类名 -->
        <Label Grid.Row="4" Grid.Column="0" Content="类名:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtClassName" Margin="5"/>

        <!-- 查找选项 -->
        <Label Grid.Row="5" Grid.Column="0" Content="查找选项:" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Margin="5,10,0,0">
            <CheckBox x:Name="chkMatchName" Content="匹配控件名称" IsChecked="True"/>
            <CheckBox x:Name="chkMatchAutomationId" Content="匹配自动化ID" IsChecked="False"/>
            <CheckBox x:Name="chkMatchControlType" Content="匹配控件类型" IsChecked="False"/>
            <CheckBox x:Name="chkMatchClassName" Content="匹配类名" IsChecked="False"/>
            <CheckBox x:Name="chkSearchInChildren" Content="在子控件中搜索" IsChecked="True"/>
        </StackPanel>

        <!-- 结果列表 -->
        <Label Grid.Row="6" Grid.Column="0" Content="查找结果:" VerticalAlignment="Top"/>
        <ListBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" x:Name="listResults" 
                 Margin="5" SelectionChanged="ListResults_SelectionChanged" MinHeight="300"/>

        <!-- 按钮 -->
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnFind" Content="查找" Width="80" Click="BtnFind_Click" Margin="5"/>
            <Button x:Name="btnSelect" Content="选择" Width="80" Click="BtnSelect_Click" 
                    IsEnabled="False" Margin="5"/>
            <Button x:Name="btnCancel" Content="取消" Width="80" Click="BtnCancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window> 